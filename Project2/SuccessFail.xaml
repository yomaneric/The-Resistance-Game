<Window x:Class="Project2.SuccessFail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project2"
        mc:Ignorable="d"
        Title="SuccessFail" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="display" HorizontalAlignment="Left" Height="69" Margin="51,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"/>
        <Button x:Name="Success" HorizontalAlignment="Center" VerticalAlignment="Center"
        Margin="51,150,164.2,42.8" BorderBrush="{x:Null}" Height="80" Width="80" Click="Success_Click" >
            <Button.Background>
                <ImageBrush ImageSource="Images/Yes.jpg"/>
            </Button.Background>

        </Button>
        <Button x:Name="Fail" HorizontalAlignment="Center" VerticalAlignment="Center"
            Margin="165,150,50.2,42.8" BorderBrush="{x:Null}" Height="80" Width="80" Click="Fail_Click" >
            <Button.Background>
                <ImageBrush ImageSource="Images/No.jpg"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
